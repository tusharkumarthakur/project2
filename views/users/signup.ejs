<% layout("/layouts/boilerplate.ejs") -%>


<h2>Signup</h2>
<div class="row">
    <div class="col-2 offset-0">
        <div class="newForm">
            <form action="/user/signup" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3 login-color">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" required name="username" placeholder="Enter Username" id="username"
                        class="form-control">
                    <div class="valid-feedback">Username is good!</div>
                    <div class="invalid-feedback">Enter username!</div>
                </div>
                <div class="mb-3 login-color">
                    <label for="name" class="form-label">name</label>
                    <input type="text" required name="name" placeholder="Enter name" id="name" class="form-control">
                    <div class="valid-feedback">name is good!</div>
                    <div class="invalid-feedback">Enter Name!</div>
                </div>
                <div class="mb-3 login-color">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" required name="email" placeholder="Enter email" id="email" class="form-control">
                </div>
                <div class="mb-3 login-color">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" required name="password" placeholder="Enter password" id="password" class="form-control">
                    <div class="valid-feedback">password looks good!</div>
                    <div class="invalid-feedback">Enter password!</div>
                </div>
                <br>
                <div class="mb-3 login-color">
                    <label for="image" class="form-label"><b>Image Upload</b></label>
                    <input type="file" name="image" id="image" class="form-control">
                </div>
                <br>
                <center><button class="btn btn-primary btn-sm">sign-up</button></center>
            </form>
        </div>
    </div>
</div>